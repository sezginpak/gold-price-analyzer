#!/usr/bin/expect -f

# SSH bağlantı bilgileri
set hostname "152.42.143.169"
set username "root"
set password "sezgin64.Pak"

# Timeout süresini artır
set timeout 180

# SSH bağlantısını başlat
spawn ssh $username@$hostname

# Parola istemi için bekle ve parolayı gir
expect {
    "password:" {
        send "$password\r"
    }
    "yes/no" {
        send "yes\r"
        expect "password:"
        send "$password\r"
    }
}

# Komut istemi için bekle
expect "# "

# 1. Proje dizinine git
send "cd /root/gold-price-analyzer\r"
expect "# "

# 2. Git pull yap
send "git pull\r"
expect "# "

# 3. Mevcut main.py prosesini öldür
send "pkill -f main.py\r"
expect "# "
sleep 2

# 4. Yeni main.py prosesini başlat
send "./venv/bin/python main.py &\r"
expect "# "
sleep 5

# 5. Son 30 saniye bekle ve log izle
puts "\n=== 30 saniye log izleniyor... ===\n"
send "timeout 30 tail -f logs/gold_analyzer.log | grep -E \"(Signal generation:|BUY|SELL|ERROR|Advanced|Pattern|Kelly)\"\r"
expect "# "

# 6. Son kaydedilen sinyalleri kontrol et
puts "\n=== Son 5 hibrit analiz kaydı ===\n"
send "sqlite3 gold_prices.db \"SELECT datetime(timestamp), gram_price, signal, confidence, signal_strength FROM hybrid_analysis ORDER BY timestamp DESC LIMIT 5;\"\r"
expect "# "

# 7. Process durumu
puts "\n=== Process Durumu ===\n"
send "ps aux | grep main.py | grep -v grep\r"
expect "# "

# Çıkış
send "exit\r"
expect eof