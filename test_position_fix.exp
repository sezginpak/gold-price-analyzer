#!/usr/bin/expect -f

# SSH bağlantı bilgileri
set hostname "152.42.143.169"
set username "root"
set password "sezgin64.Pak"

# Timeout süresini artır
set timeout 60

# SSH bağlantısını başlat
spawn ssh $username@$hostname

# Parola istemi için bekle ve parolayı gir
expect {
    "password:" {
        send "$password\r"
    }
    "yes/no" {
        send "yes\r"
        expect "password:"
        send "$password\r"
    }
}

# Komut istemi için bekle
expect "# "

# Proje dizinine git
send "cd /root/gold-price-analyzer\r"
expect "# "

# Git pull yap
send "git pull\r"
expect "# "

# Mevcut prosesi durdur
send "pkill -f main.py\r"
expect "# "
sleep 2

# Yeni prosesi başlat
send "./venv/bin/python main.py &\r"
expect "# "
sleep 5

# Bir analiz döngüsü bekle ve sonuçları kontrol et
puts "\n=== Pozisyon hesaplamalarını kontrol ediliyor... ===\n"
send "timeout 30 tail -f logs/gold_analyzer.log | head -20\r"
expect "# "

# Çıkış
send "exit\r"
expect eof