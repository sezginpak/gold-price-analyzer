#!/usr/bin/expect -f

# SSH bağlantı bilgileri
set hostname "152.42.143.169"
set username "root"
set password "sezgin64.Pak"

# Timeout süresini artır
set timeout 60

# SSH bağlantısını başlat
spawn ssh $username@$hostname

# Parola istemi için bekle ve parolayı gir
expect {
    "password:" {
        send "$password\r"
    }
    "yes/no" {
        send "yes\r"
        expect "password:"
        send "$password\r"
    }
}

# Komut istemi için bekle
expect "# "

# Proje dizinine git
send "cd /root/gold-price-analyzer\r"
expect "# "

# Mevcut prosesleri durdur
puts "=== Sistem durduruluyor... ===\n"
send "pkill -f main.py\r"
expect "# "
sleep 2

# Kodu güncelle
puts "=== Kod güncelleniyor... ===\n"
send "git pull\r"
expect "# "

# Sistemi yeniden başlat
puts "=== Sistem başlatılıyor... ===\n"
send "./venv/bin/python main.py &\r"
expect "# "
sleep 15

# 15 saniye sonra kayıt kontrolü
puts "=== Son Kayıt (15 saniye sonra): ===\n"
send "sqlite3 gold_prices.db \"SELECT datetime(timestamp), signal, CASE WHEN advanced_indicators IS NOT NULL AND advanced_indicators != '' THEN 'VAR' ELSE 'YOK' END as adv_ind, CASE WHEN pattern_analysis IS NOT NULL AND pattern_analysis != '' THEN 'VAR' ELSE 'YOK' END as pattern FROM hybrid_analysis ORDER BY timestamp DESC LIMIT 1;\"\r"
expect "# "

# Web sitesini test et
puts "=== Web Sitesi Testi: ===\n"
send "echo 'Web sitesi adresi: http://152.42.143.169/analysis'\r"
expect "# "

# Çıkış
send "exit\r"
expect eof